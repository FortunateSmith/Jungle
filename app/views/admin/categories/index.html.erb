<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <span class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </span>

  <span class="well">
    <%= link_to 'All Products', [:admin, :products], class: 'btn btn-info' %>
  </span>
  
  <div class="panel panel-default products">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Products</th>
      </tr>
    </thead>
    <tbody>
    <%= render @categories %>
    </tbody>
  </table>

</div>
</section>
